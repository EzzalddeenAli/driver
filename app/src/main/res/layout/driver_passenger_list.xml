<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/driver_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ff0099cc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColorLink="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver's Name"
        android:fontFamily="sans-serif-condensed"
        android:textSize="27sp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/driver_tag"
        android:layout_toRightOf="@+id/driver_tag"
        android:layout_toEndOf="@+id/driver_tag"
       />

    <TextView
        android:id="@+id/passenger_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passengers:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ff0099cc"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_below="@+id/driver_tag"
        android:layout_alignLeft="@+id/driver_tag"
        android:layout_alignStart="@+id/driver_tag"
         />

</RelativeLayout>