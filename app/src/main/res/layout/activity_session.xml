<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171618"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.ubclaunchpad.driver.session.SessionActivity">

    <Button
        android:id="@+id/create_session"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:backgroundTint="#5c505c"
        android:fontFamily="serif-monospace"
        android:text="Create Session"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/mapButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#5c505c"
        android:fontFamily="serif-monospace"
        android:text="show map"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_existing_sessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mapButton"
        android:layout_below="@+id/create_session"
        android:layout_margin="17dp"
        android:scrollbars="vertical"
        android:textColor="#C0C0C0" />

</RelativeLayout>
